{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["es2022"],
    "types": ["node"],
    "allowImportingTsExtensions": false
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client",
    "server/vite.ts"
  ]
}
