{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "outDir": "./dist",
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["es2022"],
    "types": ["node"]
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "drizzle.config.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
