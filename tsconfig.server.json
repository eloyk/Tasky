{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "es2022",
    "outDir": "./dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/**/*",
    "shared/**/*",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
